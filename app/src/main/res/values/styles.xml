<resources>
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/toolbar_item</item>
        <item name="colorControlActivated">@color/toolbar_item</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/ArrowHamburgerStyle</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/toolbar_menu_text</item>
        <item name="android:itemBackground">@color/background</item>
    </style>

    <style name="ArrowHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/toolbar_item</item>
    </style>
</resources>
