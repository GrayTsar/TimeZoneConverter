<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorTextSearch</item>
        <item name="colorAccent">@color/colorTextSearch</item>
        <item name="actionBarTheme">@style/acTheme</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="colorControlNormal"> @color/colorText </item>
    </style>

    <style name="acTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <!--EditText textColor-->
        <item name="android:textColorPrimary">@color/colorTextSearch</item>
        <!--EditText textColorHint -->
        <item name="android:textColorHint">@color/colorTextSearchHint</item>
        <!--EditText textColorHighlight-->
        <!--<item name="android:textColorHighlight">@color/colorTextSearch</item>-->
        <!--for @drawable/..... icon tint <style name="Base.Widget.AppCompat.SearchView" parent="android:Widget"> -->
        <item name="colorControlNormal">@color/colorTextSearch</item>
        <!--android:drawable/text_cursor_material tint -->
        <item name="colorControlActivated">@color/colorTextSearch</item>
    </style>

</resources>
