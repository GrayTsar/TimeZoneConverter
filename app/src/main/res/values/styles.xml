<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--EditText textColor-->
        <item name="android:textColorPrimary">@color/colorToolbarItems</item>
        <!--EditText textColorHint -->
        <item name="android:textColorHint">@color/colorToolbarItems</item>
        <!--EditText textColorHighlight-->
        <!--for @drawable/..... icon tint <style name="Base.Widget.AppCompat.SearchView" parent="android:Widget"> -->
        <item name="colorControlNormal">@color/colorToolbarItems</item>
        <!--android:drawable/text_cursor_material tint -->
        <item name="colorControlActivated">@color/colorToolbarItems</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorTextSearch</item>
        <item name="colorAccent">@color/colorTextSearch</item>

        <item name="drawerArrowStyle">@style/ArrowHamburgerStyle</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="colorControlNormal"> @color/colorText </item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorToolbarMenuText</item>
        <item name="android:itemBackground">@color/colorBackground</item>
    </style>

    <style name="ArrowHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorToolbarItems</item>
    </style>
</resources>
